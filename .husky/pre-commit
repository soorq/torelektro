# –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–∞–Ω–¥–∞—Ä—Ç–æ–≤ Prettier
if npm run check-format; then
    echo -e "${GREEN}[SUCCEEDED] –ü—Ä–æ–π–¥–µ–Ω–∞ –ø—Ä–æ–≤–µ—Ä–∫–∞ Prettier${NC}"
else
    echo -e "${RED}[FAILED] ü§¢ü§Æü§¢ –ö–∞–∫–æ–π —É–∂–∞—Å! –¢–≤–æ–∏ —Å—Ç–∏–ª–∏ –≤—ã–≥–ª—è–¥—è—Ç –∫–æ—à–º–∞—Ä–Ω–æ! ü§¢ü§Æü§¢
            –ü—Ä–æ–≤–µ—Ä–∫–∞ Prettier –ø—Ä–æ–≤–∞–ª–µ–Ω–∞. –ó–∞–ø—É—Å—Ç–∏ npm run format, –¥–æ–±–∞–≤—å –∏–∑–º–µ–Ω–µ–Ω–∏—è –∏ –ø–æ–ø—Ä–æ–±—É–π —Å–Ω–æ–≤–∞.${NC}"
    echo npm run format
    exit 1
